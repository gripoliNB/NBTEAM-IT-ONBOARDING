// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Onboarding {
  id                    String   @id @default(cuid())
  employeeNumber        String   @unique
  fullName              String
  department            String
  startDate             DateTime
  softwareRequirements  String   // JSON string para simplificar
  otherSoftware         String?
  
  // Campos de auditor√≠a
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  createdBy             String?
  updatedBy             String?
  
  // Soft delete
  isDeleted             Boolean  @default(false)
  deletedAt             DateTime?
  deletedBy             String?

  @@map("onboardings")
}